<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ########## 筛选栏 start -->
    <LinearLayout
        android:id="@+id/business_sift_container"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#fafcfb"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/business_sift_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/business_sift_tab1_img"
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/business_department_img"/>

                <TextView
                    android:id="@+id/business_sift_tab1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="分类"
                    android:textColor="@color/business_sift_text_color"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#e6e6e6"/>

        <RelativeLayout
            android:id="@+id/business_sift_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/business_sift_tab2_img"
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/business_location_img"/>

                <TextView
                    android:id="@+id/business_sift_tab2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="全城"
                    android:textColor="@color/business_sift_text_color"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="#e6e6e6"/>

        <RelativeLayout
            android:id="@+id/business_sift_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/business_sift_tab3_img"
                    android:layout_width="22dp"
                    android:layout_height="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/business_change_img"/>

                <TextView
                    android:id="@+id/business_sift_tab3_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="排序"
                    android:textColor="@color/business_sift_text_color"
                    android:textSize="14sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/business_sift_container"
        android:background="#e6e6e6"/>
    <!-- ########## 筛选栏 end -->

</RelativeLayout>
